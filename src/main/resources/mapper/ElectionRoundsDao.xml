  </select>
  
  <insert id="saveRoundRefRule">
  	insert into election_rounds_ref_rule_t(ROUNDS_ID_, RULE_ID_) values(#{roundId}, #{ruleId})
  </insert>
  
  <delete id="deleteAllRefRule">
  	delete from election_rounds_ref_rule_t where ROUNDS_ID_ = #{roundId}
  </delete>
