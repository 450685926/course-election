<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.server.edu.election.dao.ExemptionCourseDao">
    <resultMap id="BaseResultMap" type="com.server.edu.election.entity.ExemptionCourse">
        <id column="ID_" jdbcType="BIGINT" property="id" />
        <result column="NAME_" jdbcType="VARCHAR" property="name" />
        <result column="COURSE_CODE_" jdbcType="VARCHAR" property="courseCode" />
        <result column="CALENDAR_ID_" jdbcType="BIGINT" property="calendarId" />
        <result column="TRAINING_LEVEL_" jdbcType="VARCHAR" property="trainingLevel" />
        <result column="FORM_LEARNING_" jdbcType="VARCHAR" property="formLearning" />
        <result column="FACULTY_" jdbcType="VARCHAR" property="faculty" />
        <result column="REMARK_" jdbcType="VARCHAR" property="remark" />
        <result column="CREATED_AT_" jdbcType="TIMESTAMP" property="createdAt" />
    </resultMap>
    <sql id="Base_Column_List">
        ID_, NAME_, COURSE_CODE_,  CALENDAR_ID_, TRAINING_LEVEL_, FORM_LEARNING_,
        FACULTY_, REMARK_, CREATED_AT_
    </sql>
    <resultMap id="VoBaseResultMap" type="com.server.edu.election.vo.ExemptionCourseVo" extends="BaseResultMap">
    </resultMap>


    <select id="findExemptionCourse" resultMap="VoBaseResultMap" parameterType="com.server.edu.election.entity.ExemptionCourse">
        select
        <include refid="Base_Column_List"></include>
        from exemption_course_t
        <where>
            <if test="calendarId!=null and calendarId>0 ">
                and CALENDAR_ID_ = #{calendarId,jdbcType=BIGINT}
            </if>
            <if test="trainingLevel!=null and trainingLevel !='' ">
                and TRAINING_LEVEL_ = #{trainingLevel,jdbcType=VARCHAR}
            </if>
            <if test="name != null and name != ''">
                and (COURSE_CODE_ like concat('%',#{name},'%') or NAME_ like concat('%',#{name},'%') )
            </if>
            <if test="formLearning != null and formLearning != ''">
                and FORM_LEARNING_ = #{formLearning,jdbcType=VARCHAR}
            </if>
            <if test="courseCode != null and courseCode !='' ">
                and COURSE_CODE_ = #{courseCode,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

    <delete id="deleteExemptionCourseByIds" parameterType="java.util.List">
        delete from exemption_course_t
        where ID_ in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>